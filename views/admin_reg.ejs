<script>

	// Function to check Whether both passwords 
	// is same or not. 
	function checkPassword(form) { 
		password1 = form.password1.value; 
		password2 = form.password2.value; 

		// If password not entered 
		if (password1 == '' || password2 == '' || email == '' || region.value == '') {
			errorToast("Please enter all fields")
			return false;
		}

		// If Not same return False.     
		else if (password1 != password2) { 
			errorToast("\nPasswords do not match.") 
			return false; 
		}

		// If same return True. 
		else{ 
			return true; 
		} 
	}


</script>

<style>
	.invisible {
		display: none;
		visibility: hidden;
   }
</style>
<title>
	Register New User
</title>
</head>

<body>
	<%- include('./partials/nav_bar.ejs', {loggedIn: loggedIn, accountType: accountType}) %>
<br>
<br>
<br>
<div class="container">


<div class="card bg-light">


<article class="card-body mx-auto" style="max-width: 400px;">

	<h4 class="card-title mt-3 text-center">Create admin account</h4>
    <br>

	<form action="/admin_register" method="POST" onsubmit="return checkPassword(this)">

		<div class="form-group input-group">
			<div class="input-group-prepend">
				<span class="input-group-text"> <i class="fa fa-user"></i> </span>
			</div>
			<input name="name" class="form-control" placeholder="Full name" type="text" id="name">
		</div> <!-- form-group// -->
		<div class="form-group input-group">
			<div class="input-group-prepend">
				<span class="input-group-text"> <i class="fa fa-envelope"></i> </span>
			</div>
			<input name="email" class="form-control" placeholder="Email address" type="email" id="email">
		</div> <!-- form-group// -->
		<div class="form-group input-group">
			<div class="input-group-prepend">
				<span class="input-group-text"> <i class="fa fa-lock"></i> </span>
			</div>
			<input name="password1" class="form-control" placeholder="Create password" type="password" id="password1">
		</div> <!-- form-group// -->
		<div class="form-group input-group">
			<div class="input-group-prepend">
				<span class="input-group-text"> <i class="fa fa-lock"></i> </span>
			</div>
			<input name = "password2" class="form-control" placeholder="Repeat password" type="password" id="password2">
		</div> <!-- form-group// -->                                      
		<div class="form-group">
			<button type="submit" class="btn btn-primary btn-block"> Create Account  </button>
		</div> <!-- form-group// -->
	</form>
</article>
</div> <!-- card.// -->

</div> 
<!--container end.//-->

<link rel="stylesheet" href="/dist/css/adminlteToast.css">
<script src="/dist/js/adminlte.min.js"></script>
<script>
	function errorToast(msg) {
			$(document).Toasts('create', {
						class: 'bg-danger',
						title: 'Error',
						body: msg
			});
		}
	if ("<%= messages.success_msg %>") {
		$(document).Toasts('create', {
				class: 'bg-success',
				title: 'Success',
				body: "<%= messages.success_msg %>"
		});
	}
	if ("<%= messages.error %>") {
		$(document).Toasts('create', {
				class: 'bg-danger',
				title: 'Error',
				body: "<%= messages.error %>"
		});
	}
</script>
</body>
