<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Caretaker Summary Information</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css"
        integrity="sha384-JcKb8q3iqJ61gNV9KGb8thSsNjpSL0n8PARn9HuZOnIxN0hoP+VmmDGMN5t9UJ0Z" crossorigin="anonymous">
    <link rel="stylesheet" href="/css/profile_styles.css">
    <script src="/plugins/jquery/jquery.min.js"></script>
    <script src="/plugins/bootstrap/js/bootstrap.bundle.min.js"></script>
    <script src="/plugins/datatables/jquery.dataTables.min.js"></script>
    <script src="/plugins/datatables-bs4/js/dataTables.bootstrap4.min.js"></script>
    <script src="/plugins/datatables-responsive/js/dataTables.responsive.min.js"></script>
    <script src="/plugins/datatables-responsive/js/responsive.bootstrap4.min.js"></script>
    <script src="/dist/js/adminlte.min.js"></script>
    <link rel="stylesheet" href="/plugins/datatables-bs4/css/dataTables.bootstrap4.min.css">
    <link rel="stylesheet" href="/plugins/datatables-responsive/css/responsive.bootstrap4.min.css">
    <link rel="stylesheet" href="/plugins/fontawesome-free/css/all.min.css">
    <script>
        $(function () {
            $('#example1 tfoot th').each(function () {
                var title = $(this).text();
                $(this).html('<input type="text" placeholder="Search ' + title + '" style="width: 100%;"/>');
            });

            $("#example1").DataTable({
                "responsive": true,
                "autoWidth": false,
                initComplete: function () {
                    // Apply the search
                    this.api().columns().every(function () {
                        var that = this;

                        $('input', this.footer()).on('keyup change clear', function () {
                            if (that.search() !== this.value) {
                                that
                                    .search(this.value)
                                    .draw();
                            }
                        });
                    });

                    var r = $('#example1 tfoot tr');
                    r.find('th').each(function () {
                        $(this).css('padding', 8);
                    });
                    $('#example1 thead').append(r);
                }
            });

            $('#example1 tfoot th').each(function () {
                var title = $(this).text();
                $(this).html('<input type="text" placeholder="Search ' + title + '" style="width: 100%;"/>');
            });

            $("#example2").DataTable({
                "responsive": true,
                "autoWidth": false,
                initComplete: function () {
                    // Apply the search
                    this.api().columns().every(function () {
                        var that = this;

                        $('input', this.footer()).on('keyup change clear', function () {
                            if (that.search() !== this.value) {
                                that
                                    .search(this.value)
                                    .draw();
                            }
                        });
                    });

                    var r = $('#example2 tfoot tr');
                    r.find('th').each(function () {
                        $(this).css('padding', 8);
                    });
                    $('#example2 thead').append(r);
                }
            });
        });
    </script>
</head>

<body style="background-color: lightgrey;">
    <%- include('./partials/nav_bar.ejs', {loggedIn: loggedIn}) %>
    <div class="card">
        <div class="card-header">
            <h3 class="card-title">Manage Users</h3>
        </div>

        <div class="card-body">
            <% if(userType == 'caretaker') { %>
            <table id="example1" class="table table-bordered table-striped">
                <thead>
                    <tr>
                        <th>Name</th>
                        <th>Email</th>
                        <th>Location</th>
                        <th>Rating</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    <% users.forEach(careTaker => { %>
                    <tr>
                        <td><%= careTaker.name %></td>
                        <td><%= careTaker.email %></td>
                        <td><%= careTaker.location %></td>
                        <td><%= careTaker.rating %></td>
                        <td>
                            <a href="/delete-care-taker/<%=careTaker.email%>" class="text-muted">
                                <i class="fas fa-user-times"></i>
                            </a>
                        </td>
                    </tr>
                    <% }) %>
                </tbody>
                <tfoot>
                    <tr>
                        <th>Name</th>
                        <th>Email</th>
                        <th>Location</th>
                        <th>Rating</th>
                        <th>Actions</th>
                    </tr>
                </tfoot>
            </table>
            <% } else if(userType == 'petowner') { %>
                <table id="example2" class="table table-bordered table-striped">
                    <thead>
                        <tr>
                            <th>Name</th>
                            <th>Email</th>
                            <th>Location</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% users.forEach(petowner => { %>
                        <tr>
                            <td><%= petowner.name %></td>
                            <td><%= petowner.email %></td>
                            <td><%= petowner.location %></td>
                            <td>
                                <a href="/delete-pet-owner/<%=petowner.email%>" class="text-muted">
                                    <i class="fas fa-user-times"></i>
                                </a>
                            </td>
                        </tr>
                        <% }) %>
                    </tbody>
                    <tfoot>
                        <tr>
                            <th>Name</th>
                            <th>Email</th>
                            <th>Location</th>
                            <th>Actions</th>
                        </tr>
                    </tfoot>
                </table>
            <% } %>
        </div>
    </div>
</body>

</html>