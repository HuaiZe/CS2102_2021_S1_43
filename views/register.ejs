<script>
	// Function to check Whether both passwords 
	// is same or not. 
	function outputAlert(text) {
		document.getElementById("alert").innerHTML = 
					'<div class="alert alert-warning center-block" role="alert">'
    		+ 	`<p class="text-center" style="margin-bottom: -5px; margin-top:-5px">${text}</p>`
    		+ '</div>';
	}

	function checkPassword(form) { 
		password1 = form.password1.value; 
		password2 = form.password2.value; 

		// If password not entered 
		if (password1 == '' || password2 == '' || email == '' || region.value == '') {
			outputAlert("Please enter all fields")
			return false;
		}

		// If Not same return False.     
		else if (password1 != password2) { 
			outputAlert("\nPasswords do not match.") 
			return false; 
		}

		// If same return True. 
		else{ 
			return true; 
		} 
	}


</script>

<style>
	.invisible {
		display: none;
		visibility: hidden;
   }
</style>
<title>
	Register New User
</title>
</head>

<body>
<br>
<br>
<br>
<div class="container">


<div class="card bg-light">

	<div id="alert">
		<% if(messages.error){ %>
			<div class="alert alert-warning center-block" role="alert">
				<p class="text-center" style="margin-bottom: -5px; margin-top:-5px"><%=messages.error%></p>
			</div>
		<% } %>
	</div>

<article class="card-body mx-auto" style="max-width: 400px;">

	<h4 class="card-title mt-3 text-center">Create Account</h4>
	<p class="text-center">Select the type of account to create:</p>


	<form action="/register" method="POST" onsubmit="return checkPassword(this)">
		<div class="form-group input-group">
			<div class="col-md-12 text-center">
				<div class="btn-group btn-group-toggle" data-toggle="buttons">
					<label class="btn btn-secondary active">
						<input type="radio" name="type" id="option1" autocomplete="off" value="pet_owner" checked> Pet Owner
					</label>
					<label class="btn btn-secondary">
						<input type="radio" name="type" id="option2" autocomplete="off" value="care_taker"> Care Taker
					</label>
				</div>
			</div>
		</div>

		<div class="form-group input-group">
			<div class="input-group-prepend">
				<span class="input-group-text"> <i class="fa fa-user"></i> </span>
			</div>
			<input name="name" class="form-control" placeholder="Full name" type="text" id="name">
		</div> <!-- form-group// -->
		<div class="form-group input-group">
			<div class="input-group-prepend">
				<span class="input-group-text"> <i class="fa fa-envelope"></i> </span>
			</div>
			<input name="email" class="form-control" placeholder="Email address" type="email" id="email">
		</div> <!-- form-group// -->
		<div class="form-group input-group">
			<div class="input-group-prepend">
				<span class="input-group-text"> <i class="fa fa-building"></i> </span>
			</div>
			<select name="region" class="form-control" id="region">
				<option selected value=""> Select your region</option>
				<option value = "Central">Central</option>
				<option value = "East">East</option>
				<option value = "North">North</option>
				<option value = "North-East">North-East</option>
				<option value = "West">West</option>
			</select>
		</div> <!-- form-group end.// -->
		<div class="form-group input-group">
			<div class="input-group-prepend">
				<span class="input-group-text"> <i class="fa fa-lock"></i> </span>
			</div>
			<input name="password1" class="form-control" placeholder="Create password" type="password" id="password1">
		</div> <!-- form-group// -->
		<div class="form-group input-group">
			<div class="input-group-prepend">
				<span class="input-group-text"> <i class="fa fa-lock"></i> </span>
			</div>
			<input name = "password2" class="form-control" placeholder="Repeat password" type="password" id="password2">
		</div> <!-- form-group// -->                                      
		<div class="form-group">
			<button type="submit" class="btn btn-primary btn-block"> Create Account  </button>
		</div> <!-- form-group// -->      
		<p class="text-center">Have an account? <a href="/login">Log In</a> </p>                                                                 
	</form>
</article>
</div> <!-- card.// -->

</div> 
<!--container end.//-->


</body>
</html>
